
<h2>Ask Me a question:</h2>
	<%= form_for @message, url: create_message_url, class: 'form-horizontal' do |f| %>
		<% if @message.errors.any? %>
			<% @message.errors.full_messages.each do |error| %>
				<li class="errors"><%= error %></li>
			<% end %>
		<% end %>
		<div class="form-group">
			<%= f.text_field :name, autocomplete: 'off', placeholder: 'Name', class: 'col-md-5 form-control' %>
		</div>

		<div class="form-group">
			<%= f.email_field :email, autocomplete: 'off', placeholder: 'Email', class: 'col-md-5 form-control' %>
		</div>

		<div class="form-group">
			<%= f.text_area :body, placeholder: 'Ask your question here...', class: 'col-sm-8 form-control' %>
		</div>
		<%= f.submit 'Send', class: 'btn btn-info' %>
		<%= link_to 'Cancel', root_path, class: 'btn btn-default' %>
	<% end %>
