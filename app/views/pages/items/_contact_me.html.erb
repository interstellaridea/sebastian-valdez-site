<div id="contact-me" class="row shadow">
  <div class="container">
    <div class="row">
      <div class="col-7 mx-auto">
      <h2>Contact me</h2> 
      <%= form_for new_message_path, method: :get do |f| %>
        <div class="form-group">
          <%= f.text_field :name, placeholder: 'Your Name', class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.text_field :email, placeholder: 'Your Email',class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.text_area :body, placeholder: 'Your Message', class: 'form-control', rows: 5 %>
        </div>
          <%= f.button fa_icon('paper-plane',text: 'Send'), type: 'submit', class: 'btn btn-info' %>
          <%= button_tag 'Reset', type: 'reset', class: 'btn btn-secondary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>