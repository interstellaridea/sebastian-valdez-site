<div class="row">
  <header class="intro-header embed-responsive embed-responsive-16by9">
     <%= video_tag(
      'coffee_video.mp4',
      id: 'background-video',
      class: 'embed-responsive-item',
      autoplay: true,
      loop: true,
      muted: true,
    ) %>
  </header>
      <div id="intro-msg-wrapper" class="d-flex flex-column justify-content-center">
        <div class="intro-message">
