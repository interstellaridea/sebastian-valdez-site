
<%= form_for blog do |blog| %>
  <div class="form-group">
    <%= blog.label :Blog_Photo, class: 'lead' %>
    <br>
    <%= blog.file_field :photo %>
  </div>
  <div class="form-group">
    <%= blog.text_field :title, placeholder: 'Title', class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= blog.text_field :subtitle, placeholder: 'Subtitle', class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= blog.text_area :content, placeholder: 'Content', rows: 15, class: 'form-control' %>
  </div>
  <%= blog.submit "Save", class: 'btn btn-primary' %>
  <%= link_to 'Cancel', blogs_path, class: 'btn btn-secondary' %>
<% end %>