<div class="container">
<h1 class="mt-2">Blogs</h1>
<hr>
	<div class="blog-container d-flex flex-wrap justify-content-around">
		<% @blogs.each do |blog| %>
		<div class="col-md-4">
			<div class="card">
				<div class="card-block">
					<div class="card-title"><%= link_to "#{blog.title}", '#', class: 'lead' %></div>
					<div class="card-text"><%= blog.content.truncate(100, separator: /\s/) %></div>
					<div class="card-link"><%= blog.status %></div>
					<div class="card-block text-center">
						<div class="btn-group">
							<% Blog.statuses.each do |option| %>
								<%= link_to "#{option.first}", "#", class: "btn #{active_blog?(option.first, blog)} btn-sm" %>
							<% end %>
						</div>
					</div>
				</div>
			</div>		
		</div>
		<% end %>
	</div>
</div>